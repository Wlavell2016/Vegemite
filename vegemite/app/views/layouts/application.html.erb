<!DOCTYPE html>
<html>
  <head>
    <title>Greenthumbs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="title"><h2><a href="/">Greenthumbs</a></h2></div>

      <div class="dashboard">
        <a href="">My Profile</a>
        <a href="">Calendar</a>
        <a href="">Messages</a>
      </div>

      <div class="userinfo">
        <% if current_user %>
          Hello, <%= current_user.username %>!</br><%= link_to "Log out", session_path("current"), :method => :delete %>
        <% else %>
          <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
        <% end %>
      </div>

    </header>

    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>

  </body>
</html>
