<div class="back"><%= link_to 'Back to Gardens', gardens_path %></div>
<!-- change link to go to landing page -->

<div class="container">
  <div class="row">
    <!-- <div class="users-show"> -->
    <div class="card brown lighten-3 z-depth-2">
      <div class="card-content white-text">

      <h1 class="page-title"><%= @user.username.capitalize %>'s Profile</h1>
      <div class="col s3">
        <div class="user-profile">
          <!-- <div class="card brown lighten-3">
            <div class="card-content white-text"> -->
              <img class="circle responsive-img" <%= image_tag @user.avatar.banner.url unless @user.avatar.banner.url.blank?%>
              <!-- <%= image_tag @user.avatar.banner.url unless @user.avatar.banner.url.blank?%> -->
              <h6>Username:
                <%= @user.username %>
              </h6>
              <h6>Name:
                <%= @user.firstname %> <%= @user.lastname %>
              </h6>
            </div>

            <div class="card-action">
              <a href="#"><%= link_to 'Update', edit_user_path(@user) %></a>
            </div>

      <!-- <div class="update">
        <button type="button"><%= link_to 'Update', edit_user_path(@user) %></button>
      </div> -->

          <!-- </div>
        </div> -->
      </div>

        <div class="col s3">
          <li class="divider"></li>
          <h5>My Gardens</h5>
            <% @user.owned_gardens.each do |g| %>
              <%= link_to g.title.upcase, garden_path(g) %><br/>
              <%= g.address %><br/>
              <%=link_to "Edit", edit_garden_path(g.id) %> |
              <%=link_to "Reservations", garden_reservations_path(g.id) %><br/>
            <% end %>
      <!-- </div> -->
        </div>

        <div class="col s3">
          <li class="divider"></li>
        <!-- <div class="user-data"> -->
          <h5>Growing at</h5>
            <% @user.reservations.each do |r| %>
              <%= link_to r.garden.title.upcase, garden_path(r.garden, r.id) %><br/>
              <%= r.startdate.strftime("%b %d") %> -
              <%= r.enddate.strftime("%b %d %Y")%><br/>
              <%=link_to "Edit", edit_garden_reservation_path(r.garden, r.id) %> |
              <%=link_to "Delete", garden_reservation_path(r.garden, r.id), method: :delete, data: {confirm: "Are you sure you want to delete this reservation?"} %><br/>
            <% end %>
          <!-- <br/> -->
          </div>

        <div class="col s3">
          <li class="divider"></li>
          <h5><i class="material-icons">message</i>Inbox</h5>
      <!-- </div> -->
        </div>

      </div>
      </div>

    </div>

  </div>
