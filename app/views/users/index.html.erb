                  </div>

                  <div class="modal-footer">
                    <div class="actions"><a class=" modal-action modal-close waves-effect waves-green btn-flat"><%= submit_tag "Log in" %></a></div>
                  </div>

                <% end %>

                <p class="log-sign">Don't have an account? <%= link_to "Sign up", new_user_path %></p>

              </div>
            </form>
          </div>

        </div>
