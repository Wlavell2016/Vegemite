

<div class="form">
<%= image_tag('noun_67206_cc.png') %>

<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "User Name" %><br/>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label "First name" %><br/>
    <%= form.text_field :firstname %>
  </div>

  <div class="field">
    <%= form.label "Last name" %><br/>
    <%= form.text_field :lastname %>
  </div>

  <div class="field">
    <%= form.label "Email" %><br/>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label "Password" %><br/>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label "Confirm password" %><br/>
    <%= form.password_field :password_confirmation %>
  </div>

  <!-- <h4 class="user-type">I am a grower / I am an owner</h4> -->
  <!-- add user type functionality? -->

  <% if current_user %>
    <!-- <div class="field">
      <%= form.label :image %><br />
      <%= form.text_field :image %>
    </div> -->

    <div class="field">
    <%= form.label :avatar %><br>
    <%= form.file_field :avatar %>
   </div>
  <% else %>

  <% end %>
  <div class="actions"><%= form.submit %></div>

<% end %>

<% if current_user %>

<% else %>
  <p class="log-sign">Already have an account? <%= link_to "Log in", new_session_path %></p>
<% end %>

</div>
