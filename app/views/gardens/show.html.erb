<div class="back"><%= link_to "Back to Gardens", gardens_path %></div>


        <div class="show-image">

        </div>


<div class="garden_container">

  <!-- Page Content goes here -->
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <h4><%= @garden.title.upcase %></h4>

      <div class="row">
        <div class="col s12 m6 l4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <!-- <div class="user-info"> -->
                <div class="message"><p>Message host <i class="material-icons">message</i></p></div><br/>
                <div class="username">
                  <h4 class="center-align"><%= @garden.user.username %>'s Garden</h4>
                  <li class="divider"></li><br/>
                </div>
                  <p><%= @garden.user.firstname %> <%= @garden.user.lastname %></p>
              <!-- </div> -->
            </div>
          </div>
        </div>

        <div class="col s12 m6 l4 offset-l0">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <!-- <div class='garden-info'> -->
                <h4 class="center-align">About</h4>
                <li class="divider"></li><br/>
                <div class="title">
                  <p><b>ADDRESS:</b></p>
                </div>
                  <p><%= @garden.address %></p><br/>
                <div class="title">
                  <p><b>SIZE (in square feet):</b></p>
                </div>
                  <p><%= @garden.size %></p><br/>
                <div class="title">
                  <p><b>DESCRIPTION:</b></p>
                </div>
                  <p><%= @garden.description %></p><br/>
            </div>
          </div>
        </div>

        <div class="col s12 m6 l4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <!-- <div class="garden-map"> -->
                <div>
                  <h4 class="center-align">Reviews</h4>
                  <li class="divider"></li><br/>
                </div>
                <p>
                  Post-ironic vegan dreamcatcher, bicycle rights austin air plant letterpress kitsch vice yuccie ethical.
                  Microdosing narwhal try-hard, fashion axe drinking vinegar keytar mumblecore.
                  Banh mi plaid gentrify tattooed poutine hoodie offal enamel pin direct trade.
                </p>
              <!-- </div> -->
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <div class="title">
                <h5><b>VEGGIES:</b></h5>
              </div>
              <% @garden.vegetables.each do |vegetable| %>
              <p><%= vegetable.name.capitalize %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>



<div class="row">
          <div class="col s12 l2">
  <div>
    <h5 class="center-align">
              <div class="reserve waves-effect waves-light btn grey lighten-3">
                  <%= link_to "Reserve", new_garden_reservation_path(@garden) %></h5>
                </div>
              </div>
            </div>
            </div

    </div>
  </div>

</div>
</div>
