      <nav class="site-nav">
        <ul>
          <!-- Dropdown Structure -->
          <% if current_user %>
            <li>Hello, <%= current_user.username %>!</li>
              <ul id="dropdown1" class="dropdown-content">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "Gardens", "/gardens" %></a></li>
